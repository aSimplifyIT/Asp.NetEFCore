@model RegisterViewModel
@{
    ViewData["Title"] = "User Register";
}


<div class="container">
    <div class="row align-content-center justify-content-center">
        <form enctype="multipart/form-data" asp-action="Register" asp-controller="Account" method="post" style="width: 600px">
            <h1>User Register</h1>
            <div asp-validation-summary="All" class="danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control" id="exampleInputPassword1" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control"/>
                   
                <span asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                <input asp-for="ConfirmPassword" class="form-control" />

                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="mb-3">
                <label asp-for="City" class="form-label">City</label>
                <input asp-for="City" class="form-control" />

                <span asp-validation-for="City"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>

        </form>
    </div>
</div>

