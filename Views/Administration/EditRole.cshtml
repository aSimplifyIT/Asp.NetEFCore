@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<div class="container">
    <div class="row align-content-center justify-content-center">
        <form enctype="multipart/form-data" asp-action="EditRole" asp-controller="Administration" method="post" style="width: 600px">
            <h1>User Register</h1>
            <div asp-validation-summary="All" class="danger"></div>
            <div class="mb-3">
                <label asp-for="RoleId" class="form-label">RoleId</label>
                <input asp-for="RoleId" type="text" class="form-control" id="exampleInputPassword1" />
                <span asp-validation-for="RoleId"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoleName" class="form-label">RoleName</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Cancel</a>
        </form>
    </div>

    <div class="row align-content-center justify-content-center mt-4">
    <div class="card">
        <div class="card-header">
            Users in this role
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                        <h5>@user</h5>
                }
            }
            else
            {
                    <h5>None at the moment</h5>
            }
                <a class="btn btn-primary" style="width:auto;" asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.RoleId">Add or Remove User</a>
        </div>
    </div>
    </div>
</div>

