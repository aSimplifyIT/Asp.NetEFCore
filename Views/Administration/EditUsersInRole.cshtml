@model List<UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
}

<div class="container">
    <div class="row align-content-center justify-content-center">

        <form asp-action="EditUsersInRole" asp-controller="Administration" method="post" style="width: 600px">
            <h1>Add or Remove users from this role</h1>
            @* <div asp-validation-summary="All" class="danger"></div> *@

            <div class="mb-3">
            </div>

            <div class="mb-3">
               
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@roleId" />
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input class="form-check-input" asp-for="@Model[i].IsSelected" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </div>

            <div class="mb-3">
                @*  <button type="submit" value="update" class="btn btn-primary" style="width:auto"/> *@
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="EditRole" asp-route-id="@roleId" asp-controller="Administration" class="btn btn-primary">Cancel</a>
            </div>


        </form>
    </div>
</div>