@* @model Employee *@
@model EmployeeViewModel
@inject IEmployeeRepository _empRepository



<div class="container">
    <div class="row align-content-center justify-content-center">
        <form enctype="multipart/form-data" asp-action="Create" asp-controller="Employee" method="post" style="width: 600px">
            <h1>@ViewBag.page</h1>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label">Department</label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
            <option value="">Please Select</option>
        </select>
        <span asp-validation-for="Department"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Photo" class="form-label">Upload File</label>
        <div class="input-group">
            <input multiple asp-for="Photo" type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
            @* <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">Button</button> *@
        </div>
        <span asp-validation-for="Photo"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Add</button>

    <span>Total Employees Count = @_empRepository.GetAllEmployees().Count()</span>
</form>
</div>
</div>